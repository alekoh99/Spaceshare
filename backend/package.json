{
  "name": "spaceshare-backend",
  "version": "1.0.0",
  "description": "SpaceShare PostgreSQL Backend with Security Hardening",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-auth-flow.js",
    "test:security": "node security/tests.js",
    "test:sync": "node test-sync-endpoints.js",
    "test:integration": "node test-sync-integration.js",
    "migrate": "node migrations/migrate.js",
    "test-databases": "node test-databases.js",
    "test:auth": "node test-auth-flow.js",
    "sync": "node sync-database.js sync-all",
    "sync-users": "node sync-database.js sync-users",
    "sync-tables": "node sync-database.js sync-tables",
    "init-firestore": "node ../init-collections.js",
    "seed:users": "node seed-test-users.js",
    "seed:conversations": "node seed-conversations.js",
    "seed:notifications": "node seed-notifications.js",
    "seed:all": "npm run seed:users && npm run seed:conversations && npm run seed:notifications",
    "audit": "npm audit --production",
    "audit:fix": "npm audit fix --production",
    "setup:security": "bash setup-security.sh",
    "audit:security": "bash security-audit.sh",
    "generate:secrets": "bash generate-secrets.sh"
  },
  "keywords": ["spaceshare", "backend", "security"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "2.4.3",
    "body-parser": "1.20.2",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "17.11.0",
    "jsonwebtoken": "9.0.2",
    "mongodb": "^6.21.0",
    "pg": "^8.11.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
